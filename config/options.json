{
  "host": "127.0.0.1",
  "port": 4002,
  "resource": "node-api-oauth2-boilerplate",
  "security": {
    "tokenLife" : 3600
  },
  "mongoose": {
    "uri": "mongodb://localhost/nodeApiOAuth2DB"
  },
  "default": {
    "api": {
      "version" : "v1"
    },
    "user": {
      "username": "username",
      "email": "user@mail.com",
      "password": "123456789"
    },
    "client": {
      "name": "Client APP",
      "clientId": "android",
      "clientSecret": "1234567890"
    }
  },
  "pagination": 20,
  "bcrypt": {
    "rounds": 10
  },
  "auth": {
    "accessToken": {
      "expiresIn": 864000
    },
    "authorizationCode": {
      "expiresIn": 3600
    },
    "refreshToken": {
      "expiresIn": 8640000
    }
  }
}
